@using BancoAPI.Data.Models.ModelViews;
@model TransactionsModelView;
@{
    ViewData["Title"] = "Show Transaction";
}
<h1>Lista de Transações</h1>

<button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("AdicionarIncomeView","Transactions")'">Add Income</button>
<button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("AdicionarExpenseView","Transactions")'">Add Expense</button>
<table class="table">
    <thead>
        <tr>
            <th>Data</th>
            <th>Título</th>
            <th>Descrição</th>
            <th>Valor</th>
        </tr>
    </thead>
    <tbody>
            @foreach (var item in Model.transactions)
            {
            <tr>
                <td>@item.Created</td>
                <td>@item.title</td>
                <td>@item.description</td>
                <td>@item.value</td>

                <td>
                    <button onclick="location.href='@Url.Action("EditarTransactionView","Transactions", new {id = item.id})'">Edit</button>
                    <button onclick="if (confirm('Are you sure you want to delete this transaction?')) 
                    { location.href='@Url.Action("DeleteTransaction","Transactions", new { id = item.id, type=item.type })' }">Delete</button>
                </td>
            </tr>
            }
    </tbody>
</table>

<button type="button" class="btn btn-primary" style="background-color:darkslategrey" onclick="location.href='@Url.Action("Index","Dashboard")'">Voltar Dashboard</button>